{
  "name": "my-project",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "lint:check": "eslint . --max-warnings 0",
    "format": "eslint . --fix --cache && prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "./scripts/lint-and-format.sh --fix",
    "quality:check": "./scripts/lint-and-format.sh --check-only",
    "lint:all": "pnpm run lint --recursive",
    "lint:fix:all": "pnpm run lint:fix --recursive",
    "format:all": "pnpm run format --recursive"
  },
  "pnpm": {
    "overrides": {}
  },
  "devDependencies": {
    "@my-project/tsconfig": "workspace:^",
    "eslint": "^9.11.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "resolutions": {},
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "eslint --fix --cache",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
